<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:hint="Maharashtra SSC Cleared"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvByline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvHeadline"
                android:layout_below="@+id/tvHeadline"
                android:hint="Vinamrata Borwankar "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvDateLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHeadline"
                android:layout_toRightOf="@+id/tvByline"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint=""
                android:textSize="15sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/ivPosterImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launch" />

    </LinearLayout>
</android.support.v7.widget.CardView>